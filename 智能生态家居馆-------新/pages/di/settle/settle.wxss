/* pages/di/settle/settle.wxss */
@import "/font/iconfont.wxss";

.settle_wrap {
	width: 100vw;
	display: flex;
	height: 100rpx;
	justify-content: space-between;
	align-items: center;
}

.settle_left {
	width: 40vw;
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.settle_left icon {
	font-size: 40rpx;
	color: #248756;
}

.settle_left text {
	font-size: 30rpx;
	color: #333333;
}

.settle_right {
	width: 10vw;
	height: 100rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.settle_right icon {
	font-size: 30rpx;
	color: rgb(140, 140, 140);
}

.settle_two {
	width: 100vw;
	height: 10rpx;
	display: flex;
}

.settle_two image {
	width: 100vw;
	height: 10rpx;
}

.settle_three {
	width: 100vw;
	height: 300rpx;
	display: flex;
	flex-direction: column;
	margin: 50rpx 0 0 0;
}

.settle_three_one {
	height: 200rpx;
	display: flex;
}

.settle_three_one image {
	width: 200rpx;
	height: 200rpx;
	border-radius: 20rpx;
}

.settle_three_center {
	width: 95vw;
	height: 200rpx;
	display: flex;
	margin: 0 auto;
	flex-direction: column;
}

.settle_three_two {
	display: flex;
	flex-direction: column;
	margin: 0 0 0 20rpx;
}

.settle_three_two text:nth-child(1) {
	font-size: 45rpx;
	color: #333333;
}

.settle_three_two text:nth-child(2) {
	font-size: 35rpx;
	color: rgb(180, 180, 180);
}

.settle_three_three {
	height: 40rpx;
	align-items: center;
	display: flex;
	justify-content: flex-end;
}

.settle_three_three text:nth-child(2) {
	color: rgb(51, 51, 51);
	font-size: 40rpx;
}

.settle_three_three text:nth-child(1) {
	color: #999999;
	font-size: 26rpx;
	margin: 0 20rpx 0 0;
}

.settle_four {
	width: 100vw;
	display: flex;
}

.settle_four_center {
	width: 90vw;
	margin: 0 auto;
	display: flex;
	flex-direction: column;
}

.settle_cl {
	display: flex;
	justify-content: space-between;
}

.settle_cl text {
	height: 100rpx;
	display: flex;
	align-items: center;
}

.settle_cl text:nth-child(1) {
	height: 100rpx;
	font-size: 40rpx;
	color: #333333;
}

.settle_cl text:nth-child(2) {
	height: 100rpx;
	font-size: 40rpx;
	color: #333333;
}

.settle_clc {
	height: 100rpx;
	display: flex;
	align-items: center;
}

.settle_clc text:nth-child(1) {
	font-size: 40rpx;
	color: #333333;
}


.settle_clc text:nth-child(2) {
	font-size: 30rpx;
	margin: 0 0 0 50rpx;
	color: rgb(192, 192, 192);
}

.settle_five {
