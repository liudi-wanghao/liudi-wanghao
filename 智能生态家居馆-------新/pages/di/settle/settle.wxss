	flex-direction: column;
}

.settle_five_y {
	width: 90vw;
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.settle_five_y_one icon {
	font-size: 30rpx;
	color: red;
}

.settle_five_y_one text {
	font-size: 30rpx;
	margin: 0 0 0 30rpx;
	color: #333333;
}

.settle_sex {
	margin: 100rpx 0 0 0;
	width: 100vw;
	display: flex;
	background: #ccc;
}

.settle_sex_center {
	width: 90vw;
	height: 150rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin: 0 auto;
}

.settle_sex_left text:nth-child(1) {
	font-size: 40rpx;
	color: #333333;
}

.settle_sex_left text:nth-child(2) {
	font-size: 34rpx;
	color: #e01616;
