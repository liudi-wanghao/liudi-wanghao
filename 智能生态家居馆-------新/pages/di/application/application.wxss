/* pages/di/application/application.wxss */
.applic {
	width: 100vw;
	background: rgb(247, 247, 247);
	display: flex;
	flex-direction: column;
}

.applic_one {
	width: 100vw;
	height: 260rpx;
	display: flex;
	background: #fff;
	margin: 20rpx 0 0 0;
}

.applic_one_center {
	width: 90vw;
	height: 240rpx;
	margin: 20rpx auto;
	display: flex;
}

.applic_img {
	width: 200rpx;
	height: 200rpx;
}

.applic_two {
	width: 60vw;
	height: 230rpx;
	margin: 30rpx 0 0 20rpx;
	display: flex;
	flex-direction: column;
}

.applic_two_one {
	display: flex;
}

.applic_two_one text:nth-child(1) {
	font-size: 30rpx;
	color: rgb(81, 81, 81);
}

.applic_two_one text:nth-child(2) {
	font-size: 30rpx;
	color: rgb(218, 50, 37);
}

.applic_two_two {
	margin: 30rpx 0 0 0;
	display: flex;
	justify-content: space-between;
}

.applic_two_two text {
	font-size: 30rpx;
	color: rgb(222, 222, 222);
}

.applic_three {
	width: 100vw;
	height: 120rpx;
	display: flex;
	background: #fff;
	margin: 20rpx 0 0 0;
}

.applic_three_center {
	width: 90vw;
	height: 120rpx;
	margin: 0 auto;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.applic_three_center text:nth-child(1) {
	font-size: 35rpx;
	color: rgb(64, 64, 64);
}

.applic_three_center text:nth-child(2) {
	font-size: 35rpx;
	color: rgb(196, 196, 196);
}

.applic_four {
	width: 100vw;
	display: flex;
	margin: 30rpx 0 0 0;
	background: #fff;
}

.applic_four_center {
	width: 90vw;
	height: 200rpx;
	margin: 0 auto;
	display: flex;
	flex-direction: column;
}

.applic_four_one {
	height: 100rpx;
	display: flex;
	align-items: center;
}

.applic_four_one text {
	font-size: 30rpx;
}

.applic_four_one text:nth-child(2) {
	color: rgb(217, 52, 35);
	margin: 0 0 0 20rpx;
}

.applic_four_two {
	height: 100rpx;
	display: flex;
	align-items: center;
}

.applic_four_two text {
	font-size: 30rpx;
}

.applic_four_two text:nth-child(2) {
	color: rgb(197, 197, 197);
	margin: 0 0 0 20rpx;
}

.applic_five {
	width: 100vw;
	display: flex;
	margin: 30rpx 0 0 0;

}

.applic_five_center {
	width: 90vw;
	height: 400rpx;
	margin: 0 auto;
	display: flex;
	flex-direction: column;
	background: #0077AA;
}

.applic_five_one {
	height: 100rpx;
	display: flex;
	align-items: center;
}

.applic_five_one text {
	font-size: 40rpx;
	color: rgb(62, 65, 64);
}
.applic_fix{
	width: 100vw;
	height: 100rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	position: fixed;
	bottom: 0;
	left: 0;
	background: rgb(219,48,37);
}
.applic_fix text{
	font-size: 40rpx;
	color: rgb(251,255,255);
}