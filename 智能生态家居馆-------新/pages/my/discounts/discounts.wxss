/* pages/my/discounts/discounts.wxss */
#discounts{
	box-sizing: border-box;
	padding:48rpx 36rpx;
	width:100vw;
	height:100vh;
	background-color:#f7f7f7;
}
.dis-h1{
	width:100%;
	height:53rpx;
	line-height: 53rpx;
	font-size:32rpx;
	font-weight:700;
	color:#333;
	text-indent:22rpx;
	border-left:6rpx solid #f75f6a;
}
.dis-h1 text{
	color:#f75f6a;
}
.gift-coupon{
	width:100%;
	margin-top:28rpx;
}
.gift-list{
	display:flex;
	align-items:center;
	width:100%;
	height:208rpx;
	margin-bottom: 39rpx;
	box-shadow:1px 10px 30px #f3f7f9;
}
/*背景图*/
.gift-li{
	box-sizing: border-box;
	padding:24rpx 0 0 25rpx;
	width:437rpx;
	height:100%;
	color:#fff;
	/* background-image: url(../../../image/ye/矩形6拷贝@3x.png); */
}
.gift-top{
	font-size:36rpx;
}
.gift-conent{
	display: flex;
	justify-content: center;
	align-items:baseline;
	width:100%;
	font-size:32rpx;
}
.gift-conent text:nth-child(1){
	font-size:34rpx;
}
.gift-conent .price{
	font-size:88rpx;
}
.gift-bottom{
	font-size: 46rpx;
	font-weight: 700;
	text-align: center;
}
.gift-right{
	flex:1;
	display: flex;
	justify-content: center;
	align-items: center;
	height:100%;
}
.gift-right text{
	width:190rpx;
	height:53rpx;
	font-size:36rpx;
	color:#fff;
	text-align: center;
	background-color:#fe002f;
	border-radius:5px;
}
.more{
	display:flex;
	justify-content:center;
	align-items:center;
	width:100%;
}
.more text{
	font-size:30rpx;
	color:#bacdc3;
}
.more image{
	width:107rpx;
	height:64rpx;
}
