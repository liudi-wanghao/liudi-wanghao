/* pages/di/refundful/refundful.wxss */
.refun_all {
	width: 100vw;
	display: flex;
	background: rgb(247, 247, 247);
	flex-direction: column;
}

.refun_wrap {
	width: 100vw;
	height: 300rpx;
	display: flex;
	background: rgb(219, 48, 37);
}

.refun_one_center {
	width: 90vw;
	height: 200rpx;
	margin: 50rpx auto;
}

.refun_one {
	display: flex;
	flex-direction: column;
}

.refun_one text {
	display: flex;
	align-items: center;
	font-size: 30rpx;
	color: rgb(254, 254, 253);
}

.refun_one text :nth-child(2) {
	margin: 30rpx 0 0 0;
}

.refun_two {
	width: 100vw;
	height: 120rpx;
	background: #fff;
	display: flex;
	margin: 40rpx 0 0 0;
}

.refun_two text {
	display: flex;
	align-items: center;
	margin: 0 0 0 30rpx;
	font-size: 30rpx;
	color: rgb(98, 98, 98);
}

.refun_three {
	width: 100vw;
	height: 300rpx;
	display: flex;
}

.refun_three_center {
	width: 90vw;
	/* height: 240rpx; */
	margin: 50rpx auto;
	/* background: #0077AA; */
	display: flex;
}

.refun_three_center image {
	width: 200rpx;
	height: 200rpx;
}

.refun_three_right {
	width: 60vw;
	height: 200rpx;
	display: flex;
	flex-direction: column;
	margin: 0 0 0 30rpx;
}

.three_right_top {
	height: 100rpx;
	display: flex;
	margin: 20rpx 0 0 0;
}

.three_right_top text {
	font-size: 30rpx;
	color: rgb(57, 57, 57);
}

.three_right_bottom {
	display: flex;
	justify-content: space-between;
}

.three_right_bottom text {
	font-size: 25rpx;
	color: rgb(195, 195, 195);
}

.refun_four {
	width: 100vw;
	height: 350rpx;
	background: #fff;
}

.refun_four_center {
	width: 90vw;
	height: 300rpx;
	margin: 20rpx auto;
	display: flex;
	flex-direction: column;
}

.refun_four_one {
	display: flex;
}

.refun_four_one text {
	font-size: 32rpx;
	color: rgb(190, 190, 190);
	margin: 10rpx 0 0 0;
}

.refun_five {
	width: 100vw;
	display: flex;
	background: #fff;
	margin: 30rpx 0 0 0;
}

.refun_five_center {
	width: 90vw;
	height: 120rpx;
	margin: 0 auto;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.refun_five_center text {
	font-size: 32rpx;
}
.refun_five_center text:nth-child(2) {
	color: rgb(216,47,32);
}
.refun_sex_center{
	width: 90vw;
	height: 120rpx;
	margin: 0 auto;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.refun_sex_center text {
	font-size: 32rpx;
	color: rgb(78,78,78);
}
