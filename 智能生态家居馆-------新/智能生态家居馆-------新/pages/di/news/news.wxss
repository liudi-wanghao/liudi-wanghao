/* pages/di/news/news.wxss */
@import "/font/iconfont.wxss";
#product{
	width:100vw;
	height:100vh;
}
#product .product-img{
	width:100%;
	height:340rpx;
}
.pro-list{
	box-sizing: border-box;
	padding:0 23rpx;
	display:flex;
	justify-content: space-between;
	flex-wrap: wrap;
	width:100%;
	margin-top:42rpx;
}
.pro-li{
	position:relative;
	box-sizing: border-box;
	width:340rpx;
	height:520rpx;
	margin-bottom: 19rpx;
	border:1px solid #f9f9f9;
	border-radius:6px;
}
.pro-position{
	position: absolute;
	top:4rpx;
	right:13rpx;
	width:40rpx;
	height:40rpx;
}
icon{
	font-size: 40rpx;
	color:#d4eBde;
}
.pro-position .active{
	color: #278c58;
}




.pro-pic{
	width:100%;
	height:300rpx;
}
.pro-pic .pro-img{
	width:100%;
	height:100%;
}
.pro-text{
	box-sizing: border-box;
	padding-left:10rpx;
	width:100%;
	margin-top:60rpx;
}
.pro-text .pro-title{
	font-size:34rpx;
	color: #333;
}
.pro-text .pro-title:nth-child(2){
	margin-top:10rpx;
	font-size:24rpx;
	color: #999;
}
.pro-text .pro-price{
	margin-top:20rpx;
	font-size:32rpx;
	color: #df0000;
}